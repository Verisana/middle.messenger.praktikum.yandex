{
    "name": "messenger",
    "version": "1.0.0",
    "description": "Учебный проект мессенджера в Яндекс Практикуме",
    "engines": {
        "node": ">=14.17"
    },
    "scripts": {
        "dev": "parcel static/index.html",
        "build": "npm run compile && npm run lint && parcel build static/*",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "ts-node src/server.ts",
        "lint:p": "prettier --write './src/**/*.{ts,test.ts,json}'",
        "lint:e": "eslint \"src/**/*.ts\" --fix",
        "lint:s": "stylelint \"src/**/*css\" --fix",
        "lint": "npm run lint:p && npm run lint:e && npm run lint:s",
        "compile": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Verisana/middle.messenger.praktikum.yandex.git"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "chai": "^4.3.4",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-prettier": "^3.4.0",
        "mocha": "^9.1.1",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-handlebars-precompile-ts": "^1.0.0",
        "parcel-plugin-static-files-copy": "^2.6.0",
        "prettier": "^2.3.2",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2"
    },
    "dependencies": {
        "@fontsource/roboto": "^4.5.0",
        "@parcel/logger": "^2.0.0-alpha.3",
        "@types/express": "^4.17.13",
        "@types/uuid": "^8.3.1",
        "autoprefixer": "^9.8.6",
        "classnames": "^2.3.1",
        "express": "^4.17.1",
        "handlebars": "^4.7.7",
        "postcss": "^8.3.6",
        "postcss-advanced-variables": "^3.0.1",
        "postcss-loader": "^6.1.1",
        "postcss-modules": "^3.2.2",
        "sanitize-html": "^2.5.1",
        "uuid": "^3.4.0"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    }
}
